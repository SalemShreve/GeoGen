# src/main/resources/META-INF/mods.toml
modLoader="javafml"
loaderVersion="[47,)"
license="MIT"

[[mods]]
modId="geogen"
version="${file.jarVersion}"
displayName="GeoGen"
updateJSONURL=""
displayURL=""
logoFile="geogen.png"
credits="Geological terrain generation for Minecraft"
authors="YourName"
description='''
GeoGen brings realistic geological processes to Minecraft terrain generation.
Experience worlds shaped by plate tectonics, with different rock types,
crustal properties, and terrain features based on real geological science.

Features:
- Plate tectonic simulation with oceanic and continental crust
- Realistic terrain generation based on geological processes
- Different rock types with varying hardness and permeability
- Age-based terrain evolution and boundary interactions
'''

[[dependencies.geogen]]
modId="forge"
mandatory=true
versionRange="[47.2.0,)"
ordering="NONE"
side="BOTH"

[[dependencies.geogen]]
modId="minecraft"
mandatory=true
versionRange="[1.20.1,1.21)"
ordering="NONE"
side="BOTH"

